<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Course name</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{ title }}</td>
                    <td>{{ count }}</td>
                    <td>
                        <button class="brn btn-small js-remove" data-id="{{ id }}" data-csrf="{{ @root.csrf }}">Delete</button>
                    </td>
                </tr>
            {{/each }}
            </tbody>
        </table>
        <p><strong>Price: <span class="price">{{ price }}</span></strong></p>
        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{ csrf }}">
            <button type="submit" class="btn">Order</button>
        </form>
    {{ else }}

    {{/if}}
</div>
